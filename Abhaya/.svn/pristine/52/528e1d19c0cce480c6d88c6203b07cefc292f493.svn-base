.actions-menu {
    position:relative;
  }
  .actions-menu button {
    border: 0;
    background:transparent;
    cursor: pointer;
  }
  .actions-menu button:focus {
    outline:none;
  }
  .actions-menu ul{
    display: block;
    margin: 0;
    padding: 0;
    width:200px;
    list-style:none;
    position:absolute;
    display:none;
    background-color:#cccccc;
    z-index: 999;
  }
  .actions-menu ul li {
      margin:0;
      padding:10px;
    color:black;
    display: block;
    text-align:left;
  }
  .actions-menu ul li a{
      text-align:left;
  }
  .actions-menu.dropdown-click button:focus + ul, .actions-menu.dropdown-click ul:hover{
    top:20px;
    right:10px;
    display:block;
  }
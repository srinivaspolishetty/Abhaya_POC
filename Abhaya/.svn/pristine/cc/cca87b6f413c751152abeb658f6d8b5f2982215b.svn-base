.actions-menu {
    position:relative;
    padding-top:6px;
  }
  .actions-menu i{
   color:#6742c0;
   font-size: 18px;
   width:18px;
  }
  .actions-menu button {
    border: 0;
    background:transparent;
    cursor: pointer;
  }
  .actions-menu button:focus {
    outline:none;
  }
  .actions-menu ul{
    display: block;
    margin: 0;
    padding: 0;
    width:180px;
    list-style:none;
    position:absolute;
    display:none;
    background-color:#fff;
    border-radius:5px; 
    z-index: 999;
    -moz-box-shadow: 0px 2px 3px rgba(135, 79, 178, 0.7);
  -webkit-box-shadow: 0px 2px 3px rgba(135, 79, 178, 0.7);
  /* box-shadow: 0px 5px 3px rgba(225,232,239,0.45); */
  box-shadow: 0px 6px 15px rgba(135, 79, 178, 0.7)
  }
  .actions-menu ul li {
    margin:0;
    padding:12px;
    color:black;
    display: block;
    text-align:left;
  }
  .actions-menu ul li a{
      text-align:left;
  }

  .actions-menu a span{
    font-size:12px; 
    color:#48596b;
    padding-left:10px;
  }
  .actions-menu a span:hover{
    color:#6742c0;
    font-weight: 600;
  }
  .actions-menu.dropdown-click button:focus + ul, .actions-menu.dropdown-click ul:hover{
    top:26px;
    right:10px;
    display:block;
  }
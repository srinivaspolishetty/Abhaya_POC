<div class="modal-content popup_width">
  <div class="modal-header popup_size">
    <h5 class="modal-title">{{modelTitle}} Driver Details</h5>
    <button type="button" class="close close_removeoutline" aria-label="Close" (click)="activeModal.close('Close click')">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="modal-body">
    <div class="row popup_size">
      <div class="col-3">
        <img *ngIf="validImage" class="driverimage" [src]="driverImage" >
        <img *ngIf="!validImage" class="driverimage" src="assets/images/SVG/ic_driver_profile.svg">
      </div>
      <div class="col-9">
        <div class="row">
          <div class="col-5">
            <h6>Name</h6>
          </div>
          <div class="col-6"><h6>{{driverdata.driverName}}</h6></div>
        </div>
        <div class="row">
          <div class="col-5">
            <h6>Mobile No</h6>
          </div>
          <div class="col-6"><h6>{{driverdata.contactNumber}}</h6></div>
        </div>
        <div class="row">
            <div class="col-5">
              <h6>Gender</h6>
            </div>
            <div class="col-6"><h6>{{driverdata.gender}}</h6></div>
          </div>
        <div class="row">
          <div class="col-5">
            <h6>Driving Licence</h6>
          </div>
          <div class="col-6"><h6>{{driverdata.dlNumber}}</h6></div>
        </div>
        <div class="row">
            <div class="col-5">
              <h6>DL Expiry Date</h6>
            </div>
            <div class="col-6"><h6>{{driverdata.dlExpiryDate}}</h6></div>
          </div>
          <div class="row">
              <div class="col-5">
                <h6>RFID</h6>
              </div>
              <div class="col-6"><h6>{{driverdata.rfId}}</h6></div>
            </div>
      </div>
    </div>
  </div>
  </div>
<div class="modal-content popup_width">
  <div class="modal-header popup_size">
    <h5 class="modal-title">Driver Details</h5>
    <button type="button" class="close close_removeoutline" aria-label="Close" (click)="activeModal.close('Close click')">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="modal-body">
    <div class="row popup_size">
      <div class="col-3">
        <img *ngIf="validImage" class="driverimage" [src]="driverImage">
        <img *ngIf="!validImage" class="driverimage" src="assets/images/SVG/ic_driver_profile.svg">
      </div>
      <div class="col-9 driver-popup-align">
        <div class="row driver-details">
          <div class="col-5">
            <h6>Name</h6>
          </div>
          <div class="col-6">
            <h5>{{driverdata.driverName}}</h5>
          </div>
        </div>
        <div class="row driver-details">
          <div class="col-5">
            <h6>Mobile No</h6>
          </div>
          <div class="col-6">
            <h5>{{driverdata.contactNumber}}</h5>
          </div>
        </div>
        <div class="row driver-details">
          <div class="col-5">
            <h6>Gender</h6>
          </div>
          <div class="col-6">
            <h5>{{driverdata.gender}}</h5>
          </div>
        </div>
        <div class="row driver-details">
          <div class="col-5">
            <h6>Driving Licence</h6>
          </div>
          <div class="col-6">
            <h5>{{driverdata.dlNumber}}</h5>
          </div>
        </div>
        <div class="row driver-details">
          <div class="col-5">
            <h6>DL Expiry Date</h6>
          </div>
          <div class="col-6">
            <h5>{{driverdata.dlExpiryDate}}</h5>
          </div>
        </div>
        <div class="row driver-details">
          <div class="col-5">
            <h6>RFID</h6>
          </div>
          <div class="col-6">
            <h5>{{driverdata.rfId}}</h5>
          </div>
        </div>
      </div>
      <div class="span-line"></div>
      <div class="col-12 vehicle-title">
        <h6>Authenticated Vehicle Details</h6>
        <div class="alert alert-warning" *ngIf="noAuthData == true">
            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> No Vehicles Authenticated for this Driver
          </div>

        <div *ngIf="noAuthData == false">
          <table class="table table-borderless table_today_installed">
            <thead class="thead-bg">
              <tr>
                <th>Vehicle No</th>
                <th>IOT Number</th>
                <th>Auth Date</th>
                <th>Auth Time</th>

              </tr>
            </thead>
            <tbody>
              <tr *ngFor="let vehicle of driverDutyArray">
                <td class="align-middle">{{vehicle.rcNumber}}</td>
                <td class="align-middle">{{vehicle.serialNumber}}</td>
                <td class="align-middle">{{vehicle.packetDate}}</td>
                <td class="align-middle">{{vehicle.packetTime}}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
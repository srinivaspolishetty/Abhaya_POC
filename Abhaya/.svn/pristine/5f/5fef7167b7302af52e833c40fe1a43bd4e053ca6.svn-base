import { Injectable } from '@angular/core';
import { HttpClient } from '@angular/common/http';
import { environment } from '../../../../environments/environment';

@Injectable({
  providedIn: 'root'
})
export class MastersServicesApi {

  constructor(private httpClient: HttpClient) { }
  getStates() {
    return this.httpClient.get(`${environment.apiBase}${environment.version}/viewStates`);
  }

  getDistricts() {
    return this.httpClient.get(`${environment.apiBase}${environment.version}/viewDistricts`);
  }

  getCities() {
    return this.httpClient.get(`${environment.apiBase}${environment.version}/viewCities`);
  }
}

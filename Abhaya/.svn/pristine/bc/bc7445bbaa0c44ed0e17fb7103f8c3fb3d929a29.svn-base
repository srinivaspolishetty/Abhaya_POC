<div class="row row_shadow">
  <div class="container">
    <div class="topnav">
      <div class="row m-0 p-0">
        <div class="col-11 m-0 p-0">
          <a class="active icon_alignment text_align"><img class="img_topnav" src="assets/images/SVG/ic_modemdetails_blue.svg"><span>DEVICE DETAILS</span></a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container container_height">
   <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item active" aria-current="page"><a [routerLink]="['/rta/livetracking']" routerLinkActive="active">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page"><a>Device Management</a></li>
           <li class="breadcrumb-item" aria-current="page">Device Details</li>
        </ol>
      </nav>

      
      <div class="row page-filters">
          <div class="col-md-3 p-t-6">
            <span>Total Records: <b>{{page.totalElements}}</b></span>
          </div>
          <div class="col-md-9 text-right">
            <button type="button" class="btn btn-bare" (click)="refreshPage()"><i class="fa fa-refresh" aria-hidden="true"></i>
              Refresh</button>
            <button type="button" class="btn btn-bare"><i class="fa fa-arrow-circle-down" aria-hidden="true"></i> Download</button>|
            <button type="button" class="btn btn-bare" (click)="btnShowFilters()"><i class="fa fa-filter" aria-hidden="true"></i>
              Filters</button>
          </div>
        </div>
        <div class="slide-filters" [ngClass]="{'show': showFilters == true}">
            <div class="row slide-filters-content">
                <div class="col-3 m-0 p-0">
                    <div class="form-group">
                      <input type="text" class="filter_style form-control" aria-describedby="emailHelp"
                        placeholder="Search by Serial Number / IMEI / SIM "  [(ngModel)]="searchValue" (keyup)="searchData();">
                        <button type="button" class="btn_close close" aria-label="Close">
                          <span aria-hidden="true" (click)="clearSearch();" *ngIf="showSearchClear">&times;</span>
                        </button>
                    </div>
                  </div>
            </div>
          </div>




<table class="table table-borderless table_today_installed">
      <thead class="thead-bg">
        <tr>
          <th>SNO</th>
          <th>Serial Number</th>
          <th>SIM Number</th>
          <th>Static IP Address</th>
          <th>IMEI Number</th>
          <th>IMSI Number</th>
          <th>Date</th>
          <th>Signal Strength</th>
          <th>Mobile Number</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="hoverTable align-middle no-border-x table_alignment img_auto row_bg">
          <tr *ngFor="let modemdata of modemdetails | paginate: { id: 'modemdatapagelist', itemsPerPage: page.size, currentPage: p, totalItems: page.totalElements }">
          <td class="align-middle">{{modemdata.modemDeviceId}}</td>
          <td class="align-middle">{{modemdata.serialNumber}}</td>
          <td class="align-middle">{{modemdata.simNumber}}</td>
          <td class="align-middle">{{modemdata.ipAddress}}</td>
          <td class="align-middle">{{modemdata.imeiNumber}}</td>
          <td class="align-middle">{{modemdata.imsiNumber}}</td>
          <td class="align-middle">{{modemdata.createdDate}}</td>
          <td class="action align-middle">{{modemdata.signalStrength}}</td>
          <td class="align-middle">{{modemdata.mobileNumber}}</td>
          <td class="action align-middle"><a class="icon"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
        </tr>
        <tr *ngIf="modemdetails == null || modemdetails.length == 0">
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td>
            <span style="color:red;">No Data Found</span>
          </td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>


    <div class="row">
        <div style="margin:0px auto;">
          <pagination-controls id="modemdatapagelist" class="pagination" (pageChange)="pageChanged($event)" maxSize="6"
            directionLinks="true" autoHide="true" responsive="true" previousLabel="Prev" nextLabel="Next">
          </pagination-controls>
        </div>
      </div>

</div>
<div class="modal-bgcolog">
  <div class="modal-header">
    <h4 class="modal-title">Authenticated Drivers</h4>
    <button type="button" class="close" (click)="activeModal.close('Close click')">&times;</button>
  </div>
  <div class="modal-body">
    <div class="alert alert-warning" *ngIf="noAuthData == true">
      <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> No Drivers Authenticated for this Vehicle
    </div>
    <div *ngIf="noAuthData == false">
      <div class="row auth-driver-details" *ngFor="let driverdata of newArray">
        <div class="col-3">
          <img class="driverimage" [src]="driverdata.image">
        </div>
        <div class="col-9">
          <div class="row">
            <div class="col-4">
              <h6>Name</h6>
            </div>
            <div class="col-8">
              <h6>{{driverdata.driverName}}</h6>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <h6>Mobile No</h6>
            </div>
            <div class="col-8">
              <h6>{{driverdata.contactNumber}}</h6>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <h6>Gender</h6>
            </div>
            <div class="col-8">
              <h6>{{driverdata.gender}}</h6>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <h6>Driving Licence</h6>
            </div>
            <div class="col-8">
              <h6>{{driverdata.dlNumber}}</h6>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <h6>DL Expiry Date</h6>
            </div>
            <div class="col-8">
              <h6>{{driverdata.dlExpiryDate}}</h6>
            </div>
          </div>
          <div class="row">
            <div class="col-4">
              <h6>RFID</h6>
            </div>
            <div class="col-8">
              <h6>{{driverdata.rfId}}</h6>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
  <!-- <div class="modal-footer">
      <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
    </div> -->
</div>
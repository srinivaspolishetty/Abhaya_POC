<div class="modal-content popup_width">
  <div class="modal-header popup_size">
    <h5 class="modal-title">{{modelTitle}} Add User</h5>
    <button type="button" class="close close_removeoutline" aria-label="Close" (click)="activeModal.close('Close click')">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <form>
    <div class="row popup_size">
      <div class="offset-1"></div>
      <div class="col-10">
      	<div class="row">
      		<div class="col-6">
      			<div class="form-group">
		          <label class="label_text">User Name</label>
		          <input type="text" class="form-control user_pop">
		        </div>
      		</div>
      		<div class="col-6">
  			   <div class="form-group">
		          <label class="label_text">Password</label>
		          <input type="text" class="form-control user_pop">
		        </div>
      		</div>
      		<div class="col-6">
      			 <div class="form-group">
		          <label class="label_text" for="exampleInputEmail1">First Name</label>
		          <input type="password" class="form-control user_pop">
		        </div>
      		</div>
      		<div class="col-6">
		        <div class="form-group">
		          <label class="label_text">Last Name</label>
		          <input type="text" class="form-control user_pop">
		        </div>
      		</div>
      		<div class="col-6">
		        <div class="form-group">
		          <label class="label_text">Mobile Number</label>
		          <input type="text" class="form-control user_pop">
		        </div>
      		</div>
      		<div class="col-6">
		         <div class="form-group">
		          <label class="label_text">Email</label>
		          <input type="text" class="form-control user_pop">
		        </div>
      		</div>
      			<div class="col-6">
		         <div class="form-group">
		          <label class="label_text">Role</label>
		          <select class="form-control user_pop">
		            <option>Admin</option>
		          </select>
		        </div>
      		</div>
      		<div class="col-6">
		         <div class="form-group">
		          <label class="label_text">User Type</label>
		          <select class="form-control user_pop">
		            <option>Admin</option>
		          </select>
		        </div>
      		</div>
      			
      		<div class="col-6">
		          <div class="form-group">
			          <label class="label_text">Department</label>
			          <select class="form-control user_pop">
			            <option>Department</option>
			            <option>HR Department</option>
			          </select>
			        </div>
      		</div>
      		<div class="col-6">
		         <div class="form-group">
		          <label class="label_text">District</label>
		          <select class="form-control user_pop">
		            <option>Guntur</option>
		            <option>Krishna</option>
		          </select>
		        </div>
      		</div>
      		<div class="col-6">
		          <div class="form-group">
			          <label class="label_text">State</label>
			          <select class="form-control form_select user_pop">
			            <option>Andhra Pradesh</option>
			            <option>Telangana</option>
			          </select>
			        </div>
      		</div>
      		<div class="col-6">
		          <div class="form-group">
			          <label class="label_text">City</label>
			          <select class="form-control form_select user_pop">
			            <option>Guntur</option>
			            <option>Vijayawada</option>
			          </select>
			        </div>
      		</div>
      	</div>
      </div>
      <div class="offset-1"></div>
    </div>
    <div class="row m-0 p-0">
      <div class="pop_up_btn">
        <button class="btn btn-primary btn_save align-middle">{{isEdit ? 'Update Details' : 'ADD'}}</button>
      </div>
    </div>
  </form>
</div>

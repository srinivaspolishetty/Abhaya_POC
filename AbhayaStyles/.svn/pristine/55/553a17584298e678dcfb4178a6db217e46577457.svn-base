body{
	margin:0;
	padding:0;
	font-sixe: $fs-11;
	color:$body-text-color;
	font-family:'verdana';
}
.#{$global}{
	&-login{
		&-imgdiv{
			background: url("../images/loginimg.jpg") no-repeat center;
			height:100%;
		}
		&-formdiv{
			margin:0;
			padding:20px;
			form{
				padding:50px;
			}
		}
		&-formspan{
			display:block;
			margin:0px;
			padding:0px;
			z-index:99999;
			& a{
				cursor:pointer;
				display:inline-block;
				margin:0;
				padding:0;
				border-radius:0px;
			}
		}
	}
}